{

    "manifest_version": 2,
    "name": "Twitter Web Panel",
    "description": "Displays mobile Twitter in the sidebar.",
    "version": "1.0",
    "applications": {
        "gecko": {
          "strict_min_version": "54.0a1"
        }
    },

    "sidebar_action": {
        "default_icon": {
            "48": "icons/icon_48.png",
            "96": "icons/icon_96.png"
          },
        "default_title": "Twitter",
        "default_panel": "index.html"
    },

    "icons": {
        "48": "icons/icon_48.png",
        "96": "icons/icon_96.png"
      },

    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Shift+Alt+U"
            }
        }
    }
}