{
	"background": {
		"scripts": ["background.js"]
	},
	"manifest_version": 2,
	"name": "Bluesky Sidebar",
	"description": "Displays Bluesky in the sidebar.",
	"version": "1.0.1",
	
	"browser_specific_settings": {
		"gecko": {
			"id": "{d5dc3cca-da64-4d85-af7c-0f292025c916}",
			"strict_min_version": "60.0"
		}
	},

	"sidebar_action": {
		"default_icon": {
			"48": "icons/icon1_48.png",
			"96": "icons/icon1_96.png"
		},
		"default_title": "Bluesky",
		"browser_style": false,
		"default_panel": "panel.html"
	},

	"icons": {
		"48": "icons/icon2_48.png",
		"96": "icons/icon2_96.png"
	},
	
	"permissions": [ "storage" ],
	
	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Shift+Alt+U"
			},
			"description": "Toggle the Bluesky sidebar"
		}
	}
}
